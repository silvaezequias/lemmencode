{
  "compilerOptions": {
    "target": "ES6",

    "module": "Node16",
    "rootDir": "./src",

    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
